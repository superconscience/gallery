@import "reset.css"
@import "../libs/gallery/css/index.styl"

body,
html {
  font 16px/1.4 Roboto, Arial, sans-serif;
}
.page {
  min-width 1000px;
  padding 2.5rem 2rem;
}
.title {
  font-size 3rem;
  font-weight bold;
  text-transform uppercase;
  letter-spacing 0.02em;
  text-align center;
  margin-bottom 0.7em;
}

.gallery {
  &Item {
    display inline-block;
    width 25%;
    padding-bottom 29%;
    height 0;
    position relative;
    vertical-align top;
  }
}

.card {
  display block;
  position absolute;
  top 0;
  left 0;
  bottom 0;
  right 0;
  color white;
  overflow hidden;

  &:hover,
  &:visited {
    color white;
  }

  &Content,
  &Hover,
  &Image {
    position absolute;
    top 0;
    left 0;
    width 100%;
    height 100%;
  }

  &Image {
    object-fit cover;
    z-index: 1;
    transform scale(1);
    transition transform 3s;
  }

  &Hover {
    z-index 2;
    background rgba(0, 0, 0, 0.7);
    opacity 0;
    transition all 0.3s;
  }

  &Content {
    z-index 3;
    display flex;
    flex-direction column;
    align-items center;
    justify-content center;
    padding 2rem;
    box-sizing border-box;
    opacity 0;
    transition all 0.3s;
  }

  &Title {
    font-size 1.2rem;
    text-transform uppercase;
    letter-spacing 0.1em;
    text-align center;
    margin-bottom 0.2em;
    color: #daa35b;
  }

  &Description {
    text-align center;
  }

  &:hover {
    .cardHover,
    .cardContent {
      opacity: 1;
    }

    .cardImage {
      transform scale(1.2)
    }
  }
}
