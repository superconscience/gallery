.explosion {
  display none;
  position fixed;
  top 0;
  left 0;
  width 100vw;
  height 100vh;
  background white;
  min-width 1023px;
  min-height 600px;
  z-index 9999;
  color black;
  opacity 0;

  &_Opened {
    display block;
  }

  &_Opening {
    display block;

    .explosionImage {
      transition none;
    }
  }

  &Image {
    display block;
    position absolute;
    width 500px;
    height auto;
    object-fit cover;
    z-index 2;
    opacity 0.3;
    transform translate3d(0, 0, 0) scale(1);
    transform-origin 50% 50%;
    backface-visibility hidden;
    transition transform 0.7s, opacity 0.7s;

  }

  &Controls {
    display flex;
    flex-direction column;
    position absolute;
    top 0;
    right: 22%;
    z-index 10;
    justify-content center;
    height 400px;
    width 3rem;
    margin-top 3000px;
    transition margin 0.7s;
  }

  &Summary {
    position absolute;
    bottom 0;
    left 0;
    z-index 9;
    width 0;
    background #2d5051;
    transition width 0.7s;
    color #fff;
    overflow hidden;

    &Content {
      padding 0 4rem;
      opacity 1;
      white-space nowrap;
      transition opacity 0.3s;
    }

  }

  &Title {
    font-size 1.5rem;
    text-transform uppercase;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    -webkit-box-orient: vertical;
  }

  &Description {
    color #daa35b;
  }

  &Close {
    position absolute;
    top 0;
    width 3rem;
    height 3rem;
    border none;
    background none;
    background-image url(../images/close.svg);
    background-repeat no-repeat;
    background-position center;
    background-size 80%;
    cursor pointer;
  }

  &Navs {
    display flex;
    flex-direction column;
    align-items center;
    cursor pointer;
  }

  &Nav {
    width 3rem;
    height 3rem;
    border-radius 50%;
    border 3px solid black;
    background-color transparent;
    background-repeat no-repeat;
    background-position center;
    background-size 80%;
    cursor pointer;
    text-align center;
    opacity 1;
    transition background-color 0.3s, opacity 0.3s;

    &:hover {
      background-color black;
    }

    &:disabled {
      pointer-events none;
      opacity 0.3;
    }

    &Prev {
      background-image url(../images/arrow-up.svg);

      &:hover {
        background-image url(../images/arrow-up-white.svg);
      }
    }

    &Next {
      background-image url(../images/arrow-down.svg);

      &:hover {
        background-image url(../images/arrow-down-white.svg);
      }
    }

  }

  &Counter {
    font-weight bold;
    font-size 1.2rem;
    padding 1rem 0;
  }

}